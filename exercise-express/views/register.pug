doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Register - Book Management
    script(src='https://cdn.tailwindcss.com')
  body.bg-gradient-to-br.from-purple-50.to-pink-100.min-h-screen.flex.items-center.justify-center.p-4
    .bg-white.rounded-lg.shadow-2xl.p-8.w-full.max-w-md
      .text-center.mb-8
        h1.text-3xl.font-bold.text-gray-800.mb-2 Create Account
        p.text-gray-600 Join us to manage your books
      
      if error
        .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.mb-4(role='alert')
          p.text-sm= error
      
      if success
        .bg-green-100.border.border-green-400.text-green-700.px-4.py-3.rounded.mb-4(role='alert')
          p.text-sm= success
      
      form(action='/register', method='POST').space-y-6
        div
          label.block.text-gray-700.text-sm.font-bold.mb-2(for='username') Username
          input#username.shadow.appearance-none.border.rounded.w-full.py-3.px-4.text-gray-700.leading-tight(type='text', name='username', required, placeholder='Choose a username', class='focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent')
        
        div
          label.block.text-gray-700.text-sm.font-bold.mb-2(for='password') Password
          input#password.shadow.appearance-none.border.rounded.w-full.py-3.px-4.text-gray-700.leading-tight(type='password', name='password', required, placeholder='Create a password', minlength='6', class='focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent')
        
        div
          label.block.text-gray-700.text-sm.font-bold.mb-2(for='confirmPassword') Confirm Password
          input#confirmPassword.shadow.appearance-none.border.rounded.w-full.py-3.px-4.text-gray-700.leading-tight(type='password', name='confirmPassword', required, placeholder='Confirm your password', minlength='6', class='focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent')
        
        button.w-full.bg-purple-600.text-white.font-bold.py-3.px-4.rounded.transition.duration-200(type='submit', class='hover:bg-purple-700 focus:outline-none focus:shadow-outline') Create Account
      
      .mt-6.text-center
        p.text-gray-600 Already have an account?
          a.text-purple-600.font-semibold.ml-1(href='/login', class='hover:text-purple-800') Sign in here
